<h2>All Books Currently Being Tracked On Novellogger</h2>
<% @users.each do |user| %>
  <% if !user.books.empty? %>
    <h3><a href="/users/<%= user.id %>"><%= user.username %>'s</a> Books:</h3>
    <ul>
    <% user.books.each do |book| %>
      <li><a class="book-link" href="/books/<%= book.id %>"><%= book.title %></a> by: <%= book.author %></li>
    <% end %>
    </ul>
  <% end %>
  <br>
<% end %>

<% if Helpers.logged_in?(session)%>
  <form action="/logout" method="POST">
    <input type="submit" value="Log Out">
  </form>
<% end %>
